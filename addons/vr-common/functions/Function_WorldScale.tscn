script/source = "extends Spatial

const WS_COOLDOWN = 0.5

var ws_cooldown = 0
onready var ws = ARVRServer.world_scale

func _ready():
	set_process(true)

func _process(delta):
	if ws_cooldown > 0:
		ws_cooldown -= delta
		return

	var controller = get_parent()
	var region = controller.pad_region_pressed()

	if region == controller.UP:
#		print(\"Scale up\")
		change_ws(1)
	elif region == controller.DOWN:
#		print(\"Scale down\")
		change_ws(-1)

func change_ws(value):
	ws_cooldown = WS_COOLDOWN
	var old_ws = ws
	ws = clamp(ws + value, 1, 4)
	ARVRServer.world_scale = ws
"

